    Test-Group(
        "Failure Propagation",
        Test-Fails(Fail-Type! != 1, "Fail-Type! != 1", Fail-Type),
        Test-Fails(2 != Fail-Type!, "2 != Fail-Type!", Fail-Type),
        Test-Fails(Fail-Type! != Fail-Type!, "Fail-Type! != Fail-Type!", Fail-Type)
    )
) -> !=-tests
